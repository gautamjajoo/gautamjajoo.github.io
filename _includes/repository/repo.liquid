{% assign repo_url = include.repository | split: '/' %}
{% assign repo_id = include.repository | slugify %}

<div class="repo p-2 w-100" style="max-width: 400px;">
  <div id="repo-{{ repo_id }}" class="h-100">
    <div class="card h-100">
      <div class="card-body d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      if (typeof renderRepoCard === 'function') {
        renderRepoCard('{{ include.repository }}', 'repo-{{ repo_id }}');
      }
    });
  </script>
</div>
